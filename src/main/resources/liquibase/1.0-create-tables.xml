<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
        logicalFilePath="1.0-create-tables.xml">
    <changeSet id="CreateTables" author="MaxChernenko">
        <createTable tableName ="Clips">
            <column autoIncrement = "true" name = "id" type ="INTEGER">
                <constraints nullable="false" primaryKey="true"></constraints>
            </column>
            <column name="duration" type="VARCHAR(50)">
                <constraints nullable="false"></constraints>
            </column>
            <column name="teritory" type="INTEGER">
                <constraints nullable="false"></constraints>
            </column>
        </createTable>
        <createTable tableName = "Songs">
            <column autoIncrement = "true" name = "id" type="INTEGER">
                <constraints nullable="false" primaryKey="true"></constraints>
            </column>
            <column name = "name" type="VARCHAR(50)">
                <constraints nullable="false"></constraints>
            </column>
            <column name = "duration" type="VARCHAR(50)">
                <constraints nullable="false"></constraints>
            </column>
            <column name = "cityId" type="INTEGER">
                <constraints nullable="false"></constraints>
            </column>
        </createTable>
        <createTable tableName ="Albums">
            <column autoIncrement = "true" name = "id" type ="INTEGER">
                <constraints nullable="false" primaryKey="true"></constraints>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false"></constraints>
            </column>
            <column name="teritory" type="INTEGER">
                <constraints nullable="false"></constraints>
            </column>
            <column name="numbOfSongs" type="INTEGER">
                <constraints nullable="false"></constraints>
            </column>
            <column name="songId" type="INTEGER" >
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName ="Bands">
            <column autoIncrement = "true" name = "id" type ="INTEGER">
                <constraints nullable="false" primaryKey="true"></constraints>
            </column>
            <column name = "name" type="VARCHAR(50)">
                <constraints nullable="false"></constraints>
            </column>
            <column name = "teritory" type="INTEGER">
                <constraints nullable="false"></constraints>
            </column>
            <column name = "numbOfAlb" type="INTEGER">
                <constraints nullable="false"></constraints>
            </column>
            <column name = "country" type="VARCHAR(50)">
                <constraints nullable="false"></constraints>
            </column>
            <column name = "continentId" type="INTEGER">
                <constraints nullable="false"></constraints>
            </column>
        </createTable>
        <createTable tableName ="Sites">
            <column autoIncrement = "true" name = "id" type ="INTEGER">
                <constraints nullable="false" primaryKey="true"></constraints>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false"></constraints>
            </column>
            <column name = "bandId" type="INTEGER">
                <constraints nullable="false"></constraints>
            </column>
            <column name="continentId" type="INTEGER">
                <constraints nullable="false"></constraints>
            </column>
            <column name = "songId" type="INTEGER">
                <constraints nullable="false"></constraints>
            </column>
            <column name="cityId" type="INTEGER">
                <constraints nullable="false"></constraints>
            </column>
        </createTable>
